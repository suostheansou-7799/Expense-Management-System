rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is admin (via custom claims)
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // USERS COLLECTION (Protected)
    // ============================================
    match /users/{userId} {
      // អ្នកប្រើប្រាស់អាចអានតែព័ org៌មានខ្លួនឯង ឬ Admin អាចអានទាំងអស់
      // Users can only read their own profile, Admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // អ្នកប្រើប្រាស់អាចបង្កើត profile ខ្លួនឯងតែប៉ុណ្ណោះ
      // Users can only create their own profile
      allow create: if isOwner(userId);
      
      // អ្នកប្រើប្រាស់អាចកែប្រែ profile ខ្លួនឯង, Admin អាចកែប្រែទាំងអស់
      // Users can update their own profile, admins can update any
      allow update: if isOwner(userId) || isAdmin();
      
      // មានតែ Admin ទេដែលអាចលុប users
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // ============================================
    // EXPENSES COLLECTION
    // ============================================
    match /expenses/{expenseId} {
      // Authenticated users can read all expenses (shared group)
      allow read: if isAuthenticated();
      
      // Authenticated users can create expenses
      allow create: if isAuthenticated();
      
      // Authenticated users can update/delete expenses
      allow update, delete: if isAuthenticated();
    }
    
    // ============================================
    // INCOMES COLLECTION
    // ============================================
    match /incomes/{incomeId} {
      // Authenticated users can read all incomes (shared group)
      allow read: if isAuthenticated();
      
      // Authenticated users can create incomes
      allow create: if isAuthenticated();
      
      // Authenticated users can update/delete incomes
      allow update, delete: if isAuthenticated();
    }
    
    // ============================================
    // SESSION INVALIDATIONS (Force Logout)
    // ============================================
    match /session_invalidations/{userId} {
      // Users can read their own invalidation status
      allow read: if isAuthenticated();
      
      // Only admins can create invalidations (force logout others)
      // Users can delete their own (clear after logout)
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated();
      allow update: if isAuthenticated();
    }
    
    // ============================================
    // DEFAULT: Deny all other access
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
